<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="newClientView" xmlns:fx="http://javafx.com/fxml/1" fx:controller="VSBakery.NewClientViewController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="149.0" layoutY="34.0" prefHeight="39.0" prefWidth="278.0" text="Add New Client" textFill="#1a099e">
         <font>
            <Font name="Arial Bold" size="34.0" />
         </font>
      </Label>
      <VBox layoutX="14.0" layoutY="154.0" prefHeight="200.0" prefWidth="250.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="250.0">
               <children>
                  <Label alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="20.0" prefWidth="81.0" text="First Name: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="firstName" prefHeight="25.0" prefWidth="168.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="250.0">
               <children>
                  <Label alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="20.0" prefWidth="81.0" text="Last Name: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="lastName" prefHeight="25.0" prefWidth="168.0" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="65.0" prefHeight="98.0" prefWidth="250.0">
               <children>
                  <Label alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="20.0" prefWidth="81.0" text="Address: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
									<VBox>
                    <TextArea fx:id="address" prefHeight="110.0" prefWidth="168.0" promptText="Street Number/Name&#13;City&#13;Postal Code" />
									</VBox>
                
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="295.0" layoutY="154.0" prefHeight="107.0" prefWidth="264.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="55.0" prefHeight="35.0" prefWidth="250.0">
               <children>
                  <Label alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="20.0" prefWidth="109.0" text="Phone Number: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="phoneNum" prefHeight="25.0" prefWidth="168.0" promptText="xxx-xxx-xxxx / xxx xxx xxxx"/>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="100.0" prefHeight="35.0" prefWidth="250.0">
               <children>
                  <Label alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="20.0" prefWidth="105.0" text="Email Address: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="email" prefHeight="25.0" prefWidth="159.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="add" layoutX="311.0" layoutY="384.0" onAction="#handleAddAction" prefHeight="27.0" prefWidth="81.0" text="Add">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="Cancel" layoutX="206.0" layoutY="384.0" onAction="#handleCancelAction" prefHeight="27.0" prefWidth="81.0" text="Cancel">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
			
   </children>
   <padding>
      <Insets bottom="15.0" right="15.0" />
   </padding>
</AnchorPane>
